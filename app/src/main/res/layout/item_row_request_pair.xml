<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_item_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/user_avatar"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_item_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btn_reject"
        app:layout_constraintStart_toEndOf="@id/img_item_avatar"
        app:layout_constraintTop_toTopOf="@id/img_item_avatar"
        tools:text="Qerol" />

    <TextView
        android:id="@+id/tv_item_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/btn_reject"
        app:layout_constraintStart_toEndOf="@id/img_item_avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_item_username"
        app:layout_constraintBottom_toBottomOf="@id/img_item_avatar"
        tools:text="qerol@gmail.com" />

    <ImageButton
        android:id="@+id/btn_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_close_24"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintTop_toTopOf="@id/img_item_avatar"
        app:layout_constraintBottom_toBottomOf="@id/img_item_avatar"
        app:layout_constraintEnd_toStartOf="@id/btn_accept"
        android:contentDescription="Reject Button" />

    <ImageButton
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_done_24"
        android:backgroundTint="@android:color/holo_green_dark"
        app:layout_constraintTop_toTopOf="@id/img_item_avatar"
        app:layout_constraintBottom_toBottomOf="@id/img_item_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Accept Button" />

</androidx.constraintlayout.widget.ConstraintLayout>